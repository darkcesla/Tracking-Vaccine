@model BPOM.pembelian_vaksin

@{
    ViewBag.Title = "DeletePembelian";
    Layout = "~/Views/_LayoutPage2.cshtml";
}


<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="form-group">
        <div class="col-md-10">
            Nama
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.nama);
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            Jumlah
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.jumlah)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            Alamat
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.alamat);
        </div>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Hapus" class="btn btn-success" /> |
            <p class="btn btn-outline-danger">@Html.ActionLink("Tidak", "HomePembelian")</p></div>
    }
</div>
